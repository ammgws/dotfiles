# Customised config for sway based on /etc/sway/config
#
# Read `man 5 sway` for a complete reference.

### Variables
#
# Logo key. Use Mod1 for Alt.
# WinKey = Mod4
set $mod Mod4

# Home row direction keys, like vim
set $left h
set $down j
set $up k
set $right l

### Output configuration
set $upstairs_monitorL "Acer Technologies Acer KA270H T3QSJ0014200"
set $upstairs_monitorR "Ancor Communications Inc ASUS VP278 K3LMTF030840"
set $downstairs_monitorL "Make Model Serial"
set $downstairs_monitorR "Samsung Electric Company S27A950D 0x00000000"
set $tv "Goldstar Company Ltd LG TV 0x00000101"

#       0     1920    3840
#       
# 2060  _______________
#       |      |      |
#       | up L | up R |
# 1080  |______|______|
# 
# 1080  _______________
#       |      |      |
#       | dn L | dn R |
# 0     |______|______|

output $upstairs_monitorL   pos     0,1080  res 1920x1080
output $upstairs_monitorR   pos  1920,1080  res 1920x1080
output $downstairs_monitorL pos     0,0     res 1920x1080
output $downstairs_monitorR pos  1920,0     res 1920x1080
#output $tv                  pos -1920,1080  res 1920x1080
#output $tv disable
workspace 1 output $upstairs_monitorR
exec swaymsg focus output $upstairs_monitorR

# Default wallpaper (more resolutions are available in __DATADIR__/backgrounds/sway/)
#output * bg /usr/share/backgrounds/sway/Sway_Wallpaper_Blue_1920x1080.png fill
output * bg #000000 solid_color
#exec glpaper "HDMI-A-1" $monitorL /home/juaninch/.config/glpaper/fragments/matrix.frag

### Idle configuration
exec swayidle -w \
    timeout 300 'swaylock' \
    timeout 600 'swaymsg "output * dpms off"' \
         resume 'swaymsg "output * dpms on"' \
    before-sleep 'swaylock --daemonize'

